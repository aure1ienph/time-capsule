<div class="container background-image vh-100">
  <div class="home-container">

    <%# <--! Title --> %>
    <div class="bg-transparent text-center title-wrapper">
      <%= image_tag "mytimecapsule.png", alt: "My Time Capsule image", class: "img-fluid rounded-circle", style: "max-width: 30%; height: auto; text-align: center" %>
