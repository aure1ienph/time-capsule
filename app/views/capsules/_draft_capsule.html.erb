<div class="container d-flex flex-row justify-content-between mt-1 border-bottom border-light-gray ">
  <%= link_to edit_capsule_path(capsule), class: 'link-underline link-underline-opacity-0' do %>
    <div class="d-flex flex-column">
      <div class="w-100 d-flex gap-2 align-items-center mt-3">
        <span class="badge bg-warning"><%= capsule.status.capitalize %></span>
      </div>
      <div class="d-flex justify-content-between mt-2 mb-3">
        <h6 class="fw-bold mb-0 text-black"><%= capsule.name %></h6>
      </div>
    </div>
  <% end %>
  <%= button_to capsule_path(capsule), method: :delete, data: {turbo_method: :delete, turbo_confirm: 'Are you sure?'}, class:'btn' do %>
    <span class="material-symbols-outlined delete-icon">delete</span>
  <% end %>
</div>
